<div class="modal-position">
    <div class="modal-conteiner lightbox__content">
        <img class="image-modal" src="https://image.tmdb.org/t/p/w400{{poster_path}}" alt="{{original_title}}"
            width="280" height="416">
        <div>
            <h1 class="heder-images" data-id='{{id}}'>{{title}}</h1>
            <table class="table-description">
                <tr class="tr-table">
                    <td class="title-table-row">Vote / Votes</td>
                    <td class="description-table-row flex-row"><span class="vote">{{vote_average}}</span> / <span
                            class="votes">{{vote_count}}</span>
                    </td>
                </tr>
                <tr class="tr-table">
                    <td class="title-table-row">Popularity</td>
                    <td class="description-table-row">{{popularity}}</td>
                </tr>
                <tr class="tr-table">
                    <td class="title-table-row">Original Title</td>
                    <td class="description-table-row tolowercase">{{original_title}}</td>
                </tr>
                <tr class="tr-table">
                    <td class="title-table-row">Genre</td>
                    {{#each genres}}
                    <td class="description-table-row genre">{{name}}</td>
                    {{/each}}
                </tr>
                <tr class="tr-table year">
                    <td class="title-table-row year">Original Title</td>
                    <td class="description-table-row year value">{{release_date}}</td>
                </tr>
            </table>
            <h2 class="about">About</h2>
            <p class="text-about">{{overview}}</p>
            <button class="button-watcyed" type="button">add to watched</button>
            <button class="button-queue" type="button">add to queue</button>
        </div>
    </div>